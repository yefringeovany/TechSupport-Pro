generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TicketStatus {
  ABIERTO
  EN_PROGRESO
  RESUELTO
  CERRADO
  ESCALADO
}

enum Prioridad {
  BAJA
  MEDIA
  ALTA
  URGENTE
}

enum TipoCliente {
  VIP
  NORMAL
}

enum RolUsuario {
  ADMIN
  SUPERVISOR
  AGENTE
}

model Cliente {
  id      Int         @id @default(autoincrement())
  nombre  String
  email   String      @unique
  tipo    TipoCliente
  empresa String?

  tickets Ticket[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Agente {
  id     Int     @id @default(autoincrement())
  nombre String
  email  String  @unique
  nivel  Int // 1,2,3
  activo Boolean @default(true)

  user User?

  ticketsAsignados Ticket[]

  createdAt DateTime @default(now())
}

model User {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  password String
  rol      RolUsuario

  agenteId Int?    @unique
  agente   Agente? @relation(fields: [agenteId], references: [id])

  refreshToken String?

  createdAt DateTime @default(now())
}

model Ticket {
  id          Int    @id @default(autoincrement())
  titulo      String
  descripcion String

  estado    TicketStatus @default(ABIERTO)
  prioridad Prioridad    @default(MEDIA)

  clienteId Int
  cliente   Cliente @relation(fields: [clienteId], references: [id])

  agenteId Int?
  agente   Agente? @relation(fields: [agenteId], references: [id])

  nivelEscalamiento Int @default(1)

  fechaResolucion  DateTime?
  tiempoResolucion Int? // en minutos por ejemplo

  deletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
